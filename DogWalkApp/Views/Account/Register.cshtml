@model AccountRegisterFormModel

<h1>Registration Form</h1>

<div class="row">
	<div>
		<form class="row g-3" method="post">
			<div class="col-md-6">
				<label asp-for="@Model.FirstName" class="form-label">First Name</label>
				<input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.FirstName" class="text-danger"></span>
			</div>
			<div class="col-md-6">
				<label asp-for="@Model.LastName" class="form-label">Last Name</label>
				<input asp-for="@Model.LastName" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.LastName" class="text-danger"></span>
			</div>
			<div class="col-md-6">
				<label asp-for="@Model.Email"></label>
				<input asp-for="@Model.Email" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.Email" class="text-danger"></span>
			</div>
			<div class="col-md-6">
				<label asp-for="@Model.Password" class="form-label">Password</label>
				<input asp-for="@Model.Password" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.Password" class="text-danger"></span>
			</div>
			<div class="col-md-6">
				<label asp-for="@Model.ConfirmPassword" class="form-label">Confirm Password</label>
				<input asp-for="@Model.ConfirmPassword" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="col-md-6">
				<label asp-for="@Model.CityId" class="form-label">City</label>
				<select asp-for="@Model.CityId" asp-items="@ViewBag.Cities" class="form-select">
					@foreach(var city in Model.Cities)
					{
						<option value="@city">@city.Name</option>
					}
				</select>
			</div>
			<div class="col-md-6">
				<label asp-for="@Model.District" class="form-label">District</label>
				<input asp-for="@Model.District" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.District" class="text-danger"></span>
			</div>
			<div class="col-12">
				<button type="submit" class="btn btn-primary">Register</button>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
